<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>
            <main>
                <% if(products.length> 0 ) { %>
                    <ul>
                        <% for(let p of products) { %>
                            <li>
                                <%= p.productData.title %> (<%= p.qty %>)
                            </li>
                            <% } %>
                    </ul>
                    <% } else { %>
                        <h1>No Products in Cart</h1>
                        <% } %>
            </main>

    </body>

    </html>