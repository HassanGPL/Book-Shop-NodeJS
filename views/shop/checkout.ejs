<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>
            <main>
                <ul class="cart__item-list">
                    <% products.forEach(product=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= product.productId.title %>
                            </h1>
                            <h2>Quantity: <%= product.quantity %>
                            </h2>
                            <!-- <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" value="<%= product.productId._id %>" name="productId">
                                <button class="btn danger" type="submit">Delete</button>
                            </form> -->
                        </li>
                        <% }) %>
                </ul>
                <hr>
                <div class="centered">
                    <h3>
                        Total Price : <%= totalPrice%>
                    </h3>
                </div>
                <div class="centered">
                    <button id="order-btn" class="btn"> ORDER </button>
                    <script src="https://js.stripe.com/v3/"></script>
                    <script>
                        let stripe = Stripe('pk_test_51QQWPrEOth5Ma4DYWnfUosrU9o9lXyI0kgy3wB5zYb55RRbOF8rYEvr8l5bhP0KcBcZtLCw8suSqtvBmybKv2H4100erv17Uh1')
                        var orderBtn = document.getElementById('order-btn');
                        orderBtn.addEventListener('click', function () {
                            stripe.redirectToCheckout({
                                sessionId: '<%=sessionId%>'
                            })
                        })
                    </script>
                </div>
            </main>

    </body>

    </html>